package br.com.bugados.usuario;

import java.io.*;
import java.util.*;

public class Cliente {
	
	protected String nome;
	protected int senha;
	protected int cpf;
	String linha;
	Cliente cliente;
	
	public Cliente() {
	}
	
	public Cliente (String nome, String senha, int cpf) {
		this.nome = nome;
		this.senha = senha;
		this.cpf = cpf;
	}
	
	public void cadastroCliente() throws IOException {
		
		Map<Integer, Cliente> clientes = new HashMap<>();
		
		BufferedReader leitorCSV = new BufferedReader(new FileReader("csvCliente.csv"));
		linha = leitorCSV.readLine();
		while((linha = leitorCSV.readLine()) != null) {
			linha = linha.replace("\"", "");
			
			String nome;
			int cpf;
			String senha;
			
			String[] data = linha.split(";");
			
			nome = data[0];
			cpf = Integer.parseInt(data[1]);
			senha = data[2];
			
			cliente = new Cliente();
			clientes.put(cpf, cliente);
			
			leitorCSV.close();
		}
	}
	
	public boolean login(String password, int login) {
		if (this.senha == password && this.cpf == login) {
			System.out.println("Acesso permitido !");
			return true;
		} else if (this.cpf != login) {
			System.out.println("Usuário não encontrado");
			return false;
		} else if (this.senha != password) {
			System.out.println("Senha inválida");
			return false;
		} else {
			System.out.println("Usuário não cadastrado");
			return false;
		}
	}
	
	
	
	@Override
	public String toString() {
		return "Cliente [nome=" + nome + ", senha=" + senha + ", cpf=" + cpf + ", linha=" + linha + ", cliente="
				+ cliente + ", getNome()=" + getNome() + ", getSenha()=" + getSenha() + ", getCpf()=" + getCpf()
				+ ", getClass()=" + getClass() + ", hashCode()=" + hashCode() + ", toString()=" + super.toString()
				+ "]";
	}

	public String getNome() {
		return nome;
	}
	public void setNome(String nome) {
		this.nome = nome;
	}
	public int getSenha() {
		return senha;
	}
	public void setSenha(int senha) {
		this.senha = senha;
	}
	public int getCpf() {
		return cpf;
	}
	public void setCpf(int cpf) {
		this.cpf = cpf;
	}
	
	
}
